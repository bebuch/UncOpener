{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (Ninja Multi-Config)",
            "description": "Multi-config build with Ninja, clang, warnings as errors",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "UNCOPENER_WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "description": "Debug build with code coverage instrumentation",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/coverage",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "--coverage",
                "CMAKE_EXE_LINKER_FLAGS": "--coverage",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "UNCOPENER_WARNINGS_AS_ERRORS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "displayName": "Release",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "configurePreset": "coverage"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "default",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "configurePreset": "default",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "configurePreset": "coverage",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
