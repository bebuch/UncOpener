{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "clang-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "dev",
            "displayName": "Development (Debug)",
            "description": "Debug build with clang, warnings as errors",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "UNCOPENER_WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "rel",
            "displayName": "Release",
            "description": "Release build with clang, warnings as errors",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "UNCOPENER_WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "dev-gcc",
            "displayName": "Development (Debug) with GCC",
            "description": "Debug build with GCC, warnings as errors",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Debug",
                "UNCOPENER_WARNINGS_AS_ERRORS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "rel",
            "configurePreset": "rel"
        },
        {
            "name": "dev-gcc",
            "configurePreset": "dev-gcc"
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "rel",
            "configurePreset": "rel",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "dev-gcc",
            "configurePreset": "dev-gcc",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
